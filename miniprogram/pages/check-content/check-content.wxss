.container {
    padding: 20rpx;
    background-color: #f8f9fa;
    min-height: 100vh;
  }

/* Search Section */
.search-section {
  background: white;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.search-bar {
  display: flex;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  padding: 0 20rpx;
  background: #f8f9fa;
  border-radius: 36rpx;
  border: 1rpx solid #e9ecef;
  font-size: 28rpx;
}

.search-btn {
  height: 72rpx;
  background: #667eea;
  color: white;
  border-radius: 36rpx;
  font-size: 28rpx;
  border: none;
}

.filter-bar {
  display: flex;
  gap: 20rpx;
}

.filter-picker {
  flex: 1;
}

.filter-item {
  height: 60rpx;
  padding: 0 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.filter-text {
  font-size: 26rpx;
  color: #666;
}

/* Content List */
.content-list {
  padding: 20rpx;
}

.content-item {
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.content-meta {
  flex: 1;
}

.land-block-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.content-date {
  font-size: 24rpx;
  color: #999;
}

.content-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  font-size: 24rpx;
  color: #667eea;
  padding: 8rpx 16rpx;
  background: #f0f4ff;
  border-radius: 4rpx;
}

.action-btn.delete {
  color: #ff4757;
  background: #fff0f0;
}

/* Content Body */
.content-body {
  padding: 20rpx;
}

.content-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 15rpx;
}

.content-images {
  display: flex;
  gap: 10rpx;
}

.content-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
}

/* Analysis Section */
.content-analysis {
  border-top: 1rpx solid #f0f0f0;
  padding: 20rpx;
}

.analysis-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.analysis-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #667eea;
}

.toggle-btn {
  font-size: 24rpx;
  color: #999;
}

.analysis-content {
  background: #f8f9ff;
  padding: 15rpx;
  border-radius: 8rpx;
  border-left: 3rpx solid #667eea;
}

.analysis-item {
  margin-bottom: 15rpx;
}

.analysis-item:last-child {
  margin-bottom: 0;
}

.analysis-label {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.analysis-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.fertilizer-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.fertilizer-tag {
  display: inline-block;
  padding: 6rpx 12rpx;
  background: #e7f3ff;
  color: #1890ff;
  border-radius: 4rpx;
  font-size: 24rpx;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-btn {
  width: 200rpx;
  height: 72rpx;
  background: #667eea;
  color: white;
  border-radius: 36rpx;
  font-size: 28rpx;
  border: none;
}

/* Loading */
.loading-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}

.load-more {
  text-align: center;
  padding: 40rpx;
  color: #667eea;
  font-size: 26rpx;
}

/* Modal Styles */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 12rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
  font-size: 28rpx;
}

.picker-display {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
}

.modal-footer {
  display: flex;
  padding: 20rpx 30rpx 30rpx;
  gap: 20rpx;
  border-top: 1rpx solid #eee;
}

.btn-cancel {
  flex: 1;
  height: 72rpx;
  background: #f8f9fa;
  color: #666;
  border-radius: 36rpx;
  font-size: 28rpx;
  border: none;
}

.btn-confirm {
  flex: 1;
  height: 72rpx;
  background: #667eea;
  color: white;
  border-radius: 36rpx;
  font-size: 28rpx;
  border: none;
}