.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-landblock-hint {
  padding: 20rpx;
  background: #fff8e1;
  border-radius: 8rpx;
  border: 1rpx solid #ffe082;
  margin-bottom: 20rpx;
  text-align: center;
  color: #f57c00;
  font-size: 28rpx;
}

.section-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.btn-small {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  border: none;
}

/* Picker Styles */
.picker {
  width: 100%;
}

.picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

/* Text Input Styles */
.text-input {
  width: 90%;
  min-height: 200rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
  font-size: 28rpx;
  line-height: 1.6;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* Image Upload Styles */
.image-upload-area {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.uploaded-images {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  width: 100%;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.image-delete {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff4757;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  color: #999;
}

.upload-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
}

/* Analysis Result Styles */
.analysis-result {
  background: #f8f9ff;
  padding: 20rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #667eea;
}

.result-item {
  margin-bottom: 20rpx;
}

.result-item:last-child {
  margin-bottom: 0;
}

.result-label {
  display: block;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.result-content {
  color: #666;
  line-height: 1.6;
}

.fertilizer-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.fertilizer-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx;
  background: white;
  border-radius: 6rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.fertilizer-name {
  font-weight: 500;
  color: #333;
}

.fertilizer-amount {
  color: #667eea;
  font-weight: 600;
}

/* Action Buttons */
.action-buttons {
  position: fixed;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.btn-primary {
  flex: 1;
  height: 88rpx;
  background: #667eea;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.btn-primary[disabled] {
  background: #ccc;
}

.btn-success {
  flex: 1;
  height: 88rpx;
  background: #3cc51f;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

/* Modal Styles */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 12rpx;
  width: 90%;
  max-width: 600rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.form-input {
  width: 90%;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
  font-size: 28rpx;
}

.form-textarea {
  width: 90%;
  min-height: 120rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  padding: 20rpx 30rpx 30rpx;
  gap: 20rpx;
}

.btn-cancel {
  flex: 1;
  height: 72rpx;
  background: #f8f9fa;
  color: #666;
  border-radius: 36rpx;
  font-size: 28rpx;
  border: none;
}

.btn-confirm {
  flex: 1;
  height: 72rpx;
  background: #667eea;
  color: white;
  border-radius: 36rpx;
  font-size: 28rpx;
  border: none;
}