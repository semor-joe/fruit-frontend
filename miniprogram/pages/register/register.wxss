.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 80rpx;
  box-sizing: border-box;
}

/* Header */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.app-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
  padding: 0 20rpx;
}

/* Form Card */
.form-card {
  width: 100%;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  padding: 40rpx 36rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}

.form-group {
  margin-bottom: 6rpx;
}

.label {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 14rpx;
  font-weight: 500;
}

.required {
  color: #ff8c8c;
}

.optional {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: normal;
}

.input {
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.35);
  border-radius: 12rpx;
  padding: 0 28rpx;
  color: white;
  font-size: 30rpx;
  box-sizing: border-box;
}

.code-input {
  letter-spacing: 3rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.input-error {
  border-color: #ff8c8c;
  background: rgba(255, 100, 100, 0.15);
}

.input-placeholder {
  color: rgba(255, 255, 255, 0.45);
}

.field-hint {
  display: block;
  font-size: 22rpx;
  color: #ff8c8c;
  margin-top: 8rpx;
  padding-left: 4rpx;
}

.divider {
  height: 1rpx;
  background: rgba(255, 255, 255, 0.15);
  margin: 30rpx 0;
}

/* Action Buttons */
.actions {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.btn-register {
  width: 100%;
  height: 92rpx;
  border-radius: 46rpx;
  background: #3cc51f;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.25);
}

.btn-register[disabled] {
  background: rgba(60, 197, 31, 0.45);
  box-shadow: none;
}

.btn-back {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background: transparent;
  color: rgba(255, 255, 255, 0.85);
  font-size: 28rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: none;
}

/* Bottom Note */
.note {
  margin-top: auto;
  padding-top: 20rpx;
}

.note-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.55);
  text-align: center;
}
