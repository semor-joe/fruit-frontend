.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-top: 80rpx;
  margin-bottom: 100rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-content {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.feature-list {
  margin-bottom: 80rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  backdrop-filter: blur(10rpx);
}

.feature-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
}

.feature-text {
  font-size: 32rpx;
  color: white;
  font-weight: 500;
}

.login-buttons {
  margin-bottom: 40rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
}

.login-btn.primary {
  background: #3cc51f;
  color: white;
}

.login-btn.success {
  background: #09bb07;
  color: white;
}

.login-btn.secondary {
  background: #1890ff;
  color: white;
  margin-bottom: 20rpx;
}

.login-btn.outline {
  background: transparent;
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  margin-bottom: 20rpx;
}

.loading-state {
  text-align: center;
  padding: 40rpx;
}

.loading-text {
  color: white;
  font-size: 28rpx;
}

/* User Profile Styles */
.user-profile {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  backdrop-filter: blur(10rpx);
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.profile-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-wrapper {
  position: relative;
  background: transparent;
  border: none;
  padding: 0;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-tip {
  position: absolute;
  bottom: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  white-space: nowrap;
}

.nickname-section {
  width: 100%;
  text-align: center;
}

.nickname-input {
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  padding: 20rpx;
  color: white;
  font-size: 28rpx;
  text-align: center;
  width: 100%;
}

.nickname-input::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

.welcome-text {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
}

.logout-btn {
  width: 100%;
  height: 72rpx;
  background: rgba(255, 77, 87, 0.8);
  color: white;
  border-radius: 36rpx;
  font-size: 26rpx;
  border: none;
}

.footer {
  margin-top: auto;
  padding-top: 40rpx;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}